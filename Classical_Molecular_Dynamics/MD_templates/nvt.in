log                 log.lammps
# Initialization
units				real
boundary			p p p
atom_style			full

# Force Fields
neighbor			2.0 bin
neigh_modify		delay 0 every 1 check yes
special_bonds		lj/coul 0.0 0.0 0.5 
bond_style			harmonic 
angle_style			harmonic
dihedral_style		fourier
improper_style		cvff
pair_style			lj/cut/coul/long 12.0
pair_modify         mix geometric
kspace_style		pppm 1.0e-4

read_restart		../quench/restart.quench_final.restart

group TBA type 1 2 3
group SOL type 4 5 6 7
group BF type 8 9
group CO type 10 11
velocity			all create 298.15 250
# fix	1  shake 0.0001 20 0 
fix 				2 all nvt temp 298.15 298.15 100.0
thermo				5
compute TBA_msd TBA msd com yes 
compute SOL_msd SOL msd com yes 
compute BF_msd BF msd com yes 
compute CO_msd CO msd com yes
thermo_style		custom step temp press pe pxx pyy pzz pxy pxz pyz c_TBA_msd[4] c_SOL_msd[4] c_BF_msd[4] c_CO_msd[4] 
timestep			1
 reset_timestep		0
dump				1 all custom 50000 dump.nvt.*.dump id type element mol x y z ix iy iz xu yu zu vx vy vz fx fy fz mass q
 dump_modify			1  element N C H O C C H B F O C
restart				1000000 restart.nvt_r
run					10000000
# unfix 	1
unfix				2
write_restart		restart.nvt_10-ns.restart
write_data 		    data.nvt

